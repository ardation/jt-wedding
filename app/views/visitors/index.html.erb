<% content_for :heading do %>
<div class="primary">
  <div class="overlay">
    <div class="container">
      <%= render 'messages' %>
    </div>
    <div class="content">
      <h1 class="display-2 mb-0 text-pink"><%= invite.name %></h1>
      <h1 class="display-4 d-none d-sm-block">We are excited to invite you to our wedding</h1>
      <p class="lead">Join us on 11th May 2019 as we get married!</p>
      <%= link_to invite.rsvp? ? 'Update RSVP' : 'Send My RSVP', edit_invite_path, class: "mx-2 mt-2 d-block d-md-inline-block btn #{invite.rsvp? ? 'btn-secondary' : 'btn-light'} btn-lg" %>
      <% if invite.rsvp? %>
        <a href="<%= what_is_marriage_path %>" class="mx-2 mt-2 d-block d-md-inline-block btn btn-outline-secondary btn-lg">What is Marriage?</a>
      <% end %>
    </div>
    <div class="footer">
      Invite &nbsp; <span class="display-4"><i class="fal fa-chevron-double-down"></i></span> &nbsp; Detail
    </div>
  </div>
</div>
<% end %>
<%= render 'events' %>
