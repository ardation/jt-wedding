<div class="text-center">
  <h1 class="display-2 mb-0">Kia Ora!</h1>
  <p>Enter Your Invite Code</p>
  <%= simple_form_for Invite.new, url: find_invite_path do |f| %>
    <%= f.input :code, label: false, input_html: { maxlength: 5, autofocus: true, class: 'mx-auto' } %>
    <%= f.submit class: 'btn btn-primary', value: 'Find My Invite' %>
  <% end %>
</div>
