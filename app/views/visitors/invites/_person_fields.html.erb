<div class="nested-fields mb-2">
  <div class="d-flex align-items-end">
    <div class="flex-fill mr-2">
      <%= f.input :first_name %>
    </div>
    <div class="flex-fill mr-2">
      <%= f.input :last_name %>
    </div>
    <div class="form-group">
      <%= link_to_remove_association '<i class="fal fa-trash"></i>'.html_safe, f, class: 'btn btn-danger' %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.label :gender, 'Gender' %>
      <div class="form-group">
        <div class="btn-group btn-block btn-group-toggle" data-toggle="buttons">
          <div class="btn btn-block" role="button">
            <%= f.radio_button :gender, 'male' %>
            Guy
          </div>
          <div class="btn btn-block" role="button">
            <%= f.radio_button :gender, 'female' %>
            Girl
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <%= f.label :child, 'Age' %>
      <div class="form-group">
        <div class="btn-group btn-block btn-group-toggle" data-toggle="buttons">
          <div class="btn btn-block" role="button">
            <%= f.radio_button :child, 'false' %>
            Adult
          </div>
          <div class="btn btn-block" role="button">
            <%= f.radio_button :child, 'true' %>
            Child
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
</div>
