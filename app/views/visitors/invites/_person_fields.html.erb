<div class="nested-fields mb-2">
  <div class="d-flex align-items-end">
    <div class="flex-fill mr-2">
      <%= f.input :first_name %>
    </div>
    <div class="flex-fill mr-2">
      <%= f.input :last_name %>
    </div>
    <div class="form-group">
      <%= link_to_remove_association '<i class="fal fa-trash"></i>'.html_safe, f, class: 'btn btn-danger' %>
    </div>
  </div>
  <%= f.input :gender, as: :radio_buttons, collection: Invite::Person.genders %>
  <%= f.input :child %>
  <hr>
</div>
