<div class="nested-fields mb-2">
  <div class="d-flex">
    <div class="flex-fill mr-2">
      <%= f.input :first_name %>
    </div>
    <div class="flex-fill mr-2">
      <%= f.input :last_name %>
    </div>
    <div class="form-group remove_association">
      <%= link_to_remove_association '<i class="fal fa-trash"></i>'.html_safe, f, class: 'btn btn-danger' %>
    </div>
  </div>
  <div class="d-flex">
    <div class="flex-fill mr-2">
      <%= f.label :gender, 'Gender' %>
      <div class="form-group">
        <div class="btn-group btn-block btn-group-toggle" data-toggle="buttons">
          <div class="btn btn-block <%= 'active' if f.object.male? %>" role="button">
            <%= f.radio_button :gender, 'male', checked: ('checked' if f.object.male?) %>
            Guy
          </div>
          <div class="btn btn-block <%= 'active' if f.object.female? %>" role="button">
            <%= f.radio_button :gender, 'female', checked: ('checked' if f.object.female?) %>
            Girl
          </div>
        </div>
        <%= f.error :gender, class: 'invalid-feedback d-block' %>
      </div>
    </div>
    <div class="flex-fill">
      <%= f.label :age, 'Age' %>
      <div class="form-group">
        <div class="btn-group btn-block btn-group-toggle" data-toggle="buttons">
          <div class="btn btn-block <%= 'active' if f.object.adult? %>" role="button">
            <%= f.radio_button :age, 'adult', checked: ('checked' if f.object.adult?) %>
            Adult
          </div>
          <div class="btn btn-block <%= 'active' if f.object.child? %>" role="button">
            <%= f.radio_button :age, 'child', checked: ('checked' if f.object.child?) %>
            Child
          </div>
        </div>
        <%= f.error :age, class: 'invalid-feedback d-block' %>
      </div>
    </div>
  </div>
  <hr>
</div>
